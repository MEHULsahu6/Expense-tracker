<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Xpenso - Reports</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap & Chart.js -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <link rel="stylesheet" href="/css/home.css">
</head>
<body>

  <!-- Navbar -->
  <%- include('../partials/navbar') %>

  <div class="container py-5">
    <h2 class="text-warning mb-4">Expense Reports & Analytics</h2>

    <!-- Summary Cards -->
    <div class="row mb-5">
      <div class="col-md-4">
        <div class="card text-bg-dark shadow-sm border-warning">
          <div class="card-body">
            <h5 class="card-title text-warning">Total Spent</h5>
            <p class="card-text fs-4">₹12,450</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-bg-dark shadow-sm border-warning">
          <div class="card-body">
            <h5 class="card-title text-warning">Highest Category</h5>
            <p class="card-text fs-5">Food & Drinks</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-bg-dark shadow-sm border-warning">
          <div class="card-body">
            <h5 class="card-title text-warning">Remaining Budget</h5>
            <p class="card-text fs-4">₹3,550</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts -->
    <div class="row">
      <div class="col-md-6 mb-4">
        <div class="card text-bg-dark shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-warning mb-3">Category-wise Distribution</h5>
            <canvas id="categoryChart" height="200"></canvas>
          </div>
        </div>
      </div>
      <div class="col-md-6 mb-4">
        <div class="card text-bg-dark shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-warning mb-3">Monthly Expense Trend</h5>
            <canvas id="monthlyChart" height="200"></canvas>
          </div>
        </div>
      </div>
    </div>

  </div>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Chart JS -->
  <script>
    const categoryChart = new Chart(document.getElementById('categoryChart'), {
      type: 'pie',
      data: {
        labels: ['Food', 'Transport', 'Bills', 'Shopping', 'Others'],
        datasets: [{
          label: 'Expenses',
          data: [3000, 1500, 2000, 2500, 1450],
          backgroundColor: [
            '#f59e0b',
            '#3b82f6',
            '#10b981',
            '#ef4444',
            '#6366f1'
          ],
          borderWidth: 1
        }]
      }
    });

    const monthlyChart = new Chart(document.getElementById('monthlyChart'), {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
          label: 'Monthly Expenses',
          data: [2000, 1800, 2500, 2200, 2700, 3000],
          fill: false,
          borderColor: '#f59e0b',
          tension: 0.4
        }]
      }
    });
  </script>
</body>
</html>
