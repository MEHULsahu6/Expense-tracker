<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Xpenso - Reports</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/home.css">
</head>
<body class="bg-dark text-light">

  <%- include('../partials/navbar') %>

  <div class="container py-5">
    <h2 class="text-warning mb-4">ðŸ“„ Expense Reports</h2>

    <!-- Export Buttons -->
    <div class="d-flex justify-content-end mb-3">
      <a href="/reports/export/pdf" class="btn btn-outline-warning me-2">
        <i class="fas fa-file-pdf"></i> Export PDF
      </a>
      <a href="/reports/export/csv" class="btn btn-outline-info">
        <i class="fas fa-file-csv"></i> Export CSV
      </a>
    </div>

    <!-- Reports Table -->
    <div class="table-responsive shadow rounded">
      <table class="table table-dark table-hover text-center align-middle">
        <thead class="table-secondary text-dark">
          <tr>
            <th>#</th>
            <th>Month</th>
            <th>Total Spent (â‚¹)</th>
            <th>Most Expensive Category</th>
          </tr>
        </thead>
        <tbody>
          <% if (reportData && reportData.length > 0) { %>
            <% reportData.forEach(r => { %>
              <tr>
                <td><%= r.index %></td>
                <td><%= r.month %></td>
                <td>â‚¹ <%= r.total %></td>
                <td>
                  <span class="badge bg-warning text-dark">
                    <%= r.topCategory %>
                  </span>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-muted">No expense records available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
