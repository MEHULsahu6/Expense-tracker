<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Xpenso - Home</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/home.css">
</head>

<body>
  <!-- Navbar -->
  <%- include('./partials/navbar') %>

    <!-- Hero Section -->
    <section class="hero text-center d-flex flex-column align-items-center justify-content-center">
      <div class="container">


        <h1>Xpenso</h1>
        <% if (user) { %>
          <h2>Hello, <%= user.name %> ðŸ‘‹</h2>
          <% }else { %>
            <h2>Welcome Guest</h2>
            <% } %>
              <p class="lead">Track your expenses. Take control of your finances with ease and style.</p>
             
              <% if (user) { %>
                  <a href="/api/user/expenses" class="btn btn-orange me-2">Manage Expenses</a>
                  <a href="/api/user/income" class="btn btn-green me-2">ðŸ“ˆ Manage Income</a>
                  <a href="/api/static/about" class="btn btn-outline">Learn More</a>
                <% } else { %>

              <a href="/api/auth/register" class="btn btn-orange me-2">Get Started</a>
              <a href="/api/auth/login" class="btn btn-outline">Login</a>

              <% } %>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-5">
      <div class="container">
        <div class="row g-4">
          <div class="col-md-6 col-lg-3">
            <div class="feature-box">
              <img src="https://cdn-icons-png.flaticon.com/512/3144/3144456.png" alt="Wallet" width="40" class="mb-2">
              <h5>Manage Expenses</h5>
              <p class="small">Add, edit, and delete your daily spending records easily.</p>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="feature-box">
              <img src="https://cdn-icons-png.flaticon.com/512/1828/1828911.png" alt="Analytics" width="40"
                class="mb-2">
              <h5>Analytics & Charts</h5>
              <p class="small">Understand your financial habits with clear, visual insights.</p>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="feature-box">
              <img src="https://cdn-icons-png.flaticon.com/512/3601/3601565.png" alt="Export" width="40" class="mb-2">
              <h5>Export Reports</h5>
              <p class="small">Download your expense history in PDF, CSV or Excel formats.</p>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="feature-box">
              <img src="https://cdn-icons-png.flaticon.com/512/3064/3064197.png" alt="Secure" width="40" class="mb-2">
              <h5>Secure & Private</h5>
              <p class="small">Your data stays yours with strong encryption and privacy.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
      <div class="container">
        <h4 class="mb-3">Ready to take control of your budget?</h4>
        <a href="/api/user/budget" class="btn">Start Tracking Now</a>
      </div>
    </section>

    <!-- Footer -->
    <%- include('./partials/footer') %>

      <!-- Bootstrap JS -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
