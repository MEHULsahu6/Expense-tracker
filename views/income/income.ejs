<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Xpenso | Income</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

  <style>
    html, body {
      height: 100%;
    }
    body {
      display: flex;
      flex-direction: column;
    }
    main {
      flex: 1;
    }
  </style>
</head>
<body class="bg-dark text-white">

  <!-- Navbar -->
  <%- include('../partials/navbar') %>

  <!-- Main Content -->
  <main class="container mt-5">
    <h2 class="text-success mb-4">Manage Income</h2>

    <!-- Add Income Form -->
    <form action="/api/user/income/add" method="POST" class="bg-secondary bg-opacity-10 p-4 rounded border border-secondary mb-5">
      <div class="mb-3">
        <label for="source" class="form-label text-light">Source</label>
        <input type="text" class="form-control" id="source" name="source" placeholder="e.g., Salary, Freelance" required />
      </div>
      <div class="mb-3">
        <label for="amount" class="form-label text-light">Amount</label>
        <input type="number" class="form-control" id="amount" name="amount" placeholder="₹" required />
      </div>
      <div class="mb-3">
        <label for="date" class="form-label text-light">Date</label>
        <input type="date" class="form-control" id="date" name="date" required />
      </div>
      <button type="submit" class="btn btn-success">Add Income</button>
    </form>

    <!-- Income History -->
    <div>
      <h4 class="mb-3">Income History</h4>
      <% if (incomes && incomes.length > 0) { %>
        <ul class="list-group">
          <% incomes.forEach(income => { %>
            <li class="list-group-item bg-dark text-white border-secondary d-flex justify-content-between align-items-center">
              <div>
                <strong><%= income.title %></strong><br />
                ₹<%= income.amount %> on <%= income.date.toDateString() %>
              </div>
              <form action="/income/<%= income._id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-sm btn-danger" onclick="return confirm('Delete this income?')">Delete</button>
              </form>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-muted">No income records found.</p>
      <% } %>
    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
